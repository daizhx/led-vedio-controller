<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.com.ledvediocontroller">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="demo.com.ledvediocontroller.MyApplication">
        <activity android:name=".MainActivity">

             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity android:name=".SearchDeviceActivity" />
        <activity
            android:name=".SettingActivity"
            android:theme="@style/AppTheme.ActionBar">
        </activity>
        <activity
            android:name=".DeviceTypeActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".SetLanguageActivity"
            android:theme="@style/AppTheme.ActionBar" />
        <activity android:name=".SetDateTimeActivity"
            android:theme="@style/AppTheme.ActionBar"></activity>

        <activity android:name=".fragments.InputWifiDialogFragment"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/config_ip_title"/>
    </application>

</manifest>